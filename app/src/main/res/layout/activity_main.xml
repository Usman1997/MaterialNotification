<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/rlmain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/example1"
                android:layout_weight="1"
                android:text="Example 1">

            </Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/example2"
                android:layout_weight="1"
                android:text="Example 2">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/example3"
                android:layout_weight="1"
                android:text="Example 3">

            </Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/example4"
                android:layout_weight="1"
                android:text="Example 4">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/example5"
                android:layout_weight="1"
                android:text="Example 5">

            </Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/example6"
                android:layout_weight="1"
                android:text="Example 6">
            </Button>

        </LinearLayout>
    </LinearLayout>




</RelativeLayout>